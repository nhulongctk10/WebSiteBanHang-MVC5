@model Product

<tr>
    <td class="hidden-xs">
        <a href="@Url.Action("ProductDetails", new { id = Model.ProductId })" title="Xem chi tiết">
            <img src="@Url.Content(Model.Thumbnail)" alt="@Model.Name" width="100" />
        </a>
    </td>

    <td>
        <a href="@Url.Action("Details", new {id = Model.ProductId})" class="text-success font-bold" title="Xem chi tiết">
            @Html.DisplayFor(model => model.Name)
        </a>
        (<strong class="text-danger">@Html.DisplayFor(model => model.ProductCode)</strong>)<br />
        Hãng sản xuất: @Html.DisplayFor(model => model.Supplier.Name)<br />
        <small>@Html.DisplayFor(model => model.ShortIntro)</small>
    </td>

    <td class="hidden-sm hidden-xs">
        Gía SP: @Html.DisplayFor(model => model.Price) đ<br />
        Giảm giá: @Html.DisplayFor(model => model.Discount) <br />
        Gía bán: @(Model.Price * (1 - Model.Discount)) đ
    </td>

    <td class="hidden-sm hidden-xs">
        @Html.DisplayFor(model => model.Quantity)
        @Html.DisplayFor(model => model.QtyPerUnit)
    </td>

    <td class="td_toggle">
        <button type="button" class="toggle @(Model.Actived.ToString().ToLower())"
                data-toggle-state="true"
                data-url="@Url.Action("UpdateToggle")"
                data-args="Actived_@(Model.Actived.ToString().ToLower())_@(Model.ProductId)"></button>
    </td>

    <td>
        @(Html.Bootstrap()
            .ActionLink("", "Edit")
            .RouteValues(new { id = Model.ProductId })
            .Title("Cập nhật thông tin SP")
              .AppendIcon("fa fa-pencil"))

        @(Html.Bootstrap()
            .ActionLink("", "List","Comment")
            .RouteValues(new { id = Model.ProductId })
            .Title("Xem bình luận")
              .AppendIcon("fa fa-comment"))

        @(Html.Bootstrap()
            .ActionLink("", "List","Picture")
            .RouteValues(new { id = Model.ProductId })
            .Title("Xem hình ảnh sản phẩm")
              .AppendIcon("fa fa-picture-o"))

        @(Html.Bootstrap()
            .ActionLink("", "History","Product")
            .RouteValues(new { id = Model.ProductId })
            .Title("Xem nhật ký cập nhật")
              .AppendIcon("fa fa-history"))

        @(Html.Bootstrap()
            .ActionLink("", "BuyItem","Order")
            .RouteValues(new { id = Model.ProductId })
            .Title("Xem đơn hàng mua sản phẩm này")
            .AppendIcon("fa fa-dropbox"))
    </td>
</tr>