@model CheapShop.Models.Picture
@{
    ViewBag.Title = "Quản lý hình ảnh";
}

@section pluginStyles{
    <link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title"><h5>Thêm hình ảnh mới</h5></div>
        </div>

        <div class="ibox-content p-sm">
            @using (Html.BeginForm("Create","Pictures",FormMethod.Post,new{enctype="multipart/form-data"}))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.Partial("_CreateOrEditPartial")

                    @Html.Partial("_ToolbarPartial")
                </div>
            }
        </div>
    </div>
</div>