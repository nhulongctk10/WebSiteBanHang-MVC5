@model CheapShop.Models.Shipper

@{
    ViewBag.Title = "Quản lý các đơn vị giao hàng";
}
<div class="row">
    <div class="col-md-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Cập nhật đơn vị chuyển hàng</h5>
            </div>

            <div class="ibox-content p-sm">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @(Html.ValidationSummary(true, "", new {@class = "text-danger"}))
                        @(Html.HiddenFor(model=>model.ShipperId))

                        @Html.Partial("_CreateOrEditPartial", Model)
                        @Html.Partial("_ToolbarPartial")
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/admjqueryval")
}